<Page
    x:Class="App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:ConnectionId='2' Content="Connect to Sim" Margin="84,84,0,0" VerticalAlignment="Top" Height="34" Width="224"                     />
        <TextBox x:ConnectionId='3' HorizontalAlignment="Left" Margin="348,84,0,0" TextWrapping="Wrap" Text="Origin (ICAO)" VerticalAlignment="Top" Height="37" Width="137"                                    />
        <Button x:ConnectionId='4' Content="Start Flight" Margin="84,139,0,0" VerticalAlignment="Top" Height="34" Width="224"                       />
        <TextBox x:ConnectionId='5' HorizontalAlignment="Left" Margin="348,136,0,0" TextWrapping="Wrap" Text="Destination (ICAO)" VerticalAlignment="Top" Height="37" Width="137"                                    />
        <TextBlock HorizontalAlignment="Left" Margin="84,10,0,0" TextWrapping="Wrap" Text="Simple ACARS logger" VerticalAlignment="Top" Height="52" Width="195"/>
        <TextBlock x:ConnectionId='6' HorizontalAlignment="Left" Margin="84,199,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" x:Name="simStatus"/>
        <TextBlock x:ConnectionId='7' HorizontalAlignment="Left" Margin="84,223,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" x:Name="flightStatus"/>

    </Grid>
</Page>

